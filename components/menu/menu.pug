div.menu.pure-menu.custom-restricted-width
span.menu__title.pure-menu-heading= title
ul.menu__list.pure-menu-list
  - for (let j=0; j<items.length; j++) { 
  - let item = items[j]
    li.pure-menu-item(data-index= j)
            a.pure-menu-link(href= item.href title= item.anchor data-action="pick")
                | !{item.anchor}
                i.close(data-action="remove")
  - }

